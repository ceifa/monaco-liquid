{
    "name": "monaco-liquid",
    "version": "0.0.2",
    "description": "Liquid templating language support for Monaco Editor with Zod schema validation",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "start": "tsc -d --watch",
        "build": "tsc -d",
        "test": "npx serve -l 3000"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ceifa/monaco-liquid.git"
    },
    "author": "ceifa",
    "license": "MIT",
    "keywords": [
        "monaco",
        "monaco-editor",
        "liquid",
        "liquidjs",
        "language",
        "syntax-highlighting",
        "autocomplete",
        "validation",
        "zod"
    ],
    "bugs": {
        "url": "https://github.com/ceifa/monaco-liquid/issues"
    },
    "homepage": "https://github.com/ceifa/monaco-liquid#readme",
    "peerDependencies": {
        "monaco-editor": ">=0.52",
        "zod": ">=4.1"
    },
    "devDependencies": {
        "serve": "^14.2.5",
        "typescript": "^5.9.3"
    }
}
